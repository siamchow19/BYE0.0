<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.ClientProfileActivity">

    <ImageView
        android:id="@+id/profile_image_in_profileactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/profile_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avator" />

    <Button
        android:id="@+id/change_profile_pic_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/teal_200"
        android:text="Edit"
        app:icon="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_in_profileactivity"
        app:layout_constraintEnd_toEndOf="@+id/profile_image_in_profileactivity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Name : "
        android:textStyle="bold |italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text="Address : "
        android:textStyle="bold |italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Phone Number : "
        android:textStyle="bold |italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="272dp"
        android:text="Save"
        app:icon="@drawable/save_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <EditText
        android:id="@+id/address_edit_text"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <EditText
        android:id="@+id/number_edit_text"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />

    <ProgressBar
        android:id="@+id/save_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="276dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_in_profileactivity" />
</androidx.constraintlayout.widget.ConstraintLayout>